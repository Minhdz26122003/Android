<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Theloai"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/imgbg"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:scaleType="fitXY"
            android:src="@drawable/ta_la_ta_de_3254" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/texttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại"
                android:textSize="20dp"
                android:fontFamily="@font/font1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/texttl"
                android:id="@+id/hrzv"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <Button
                        android:id="@+id/hanhdong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EA9292"
                        android:text="Hành động"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        app:cornerRadius="20dp"
                        android:textSize="10dp"
                        android:layout_margin="5dp"
                        />
                    <Button
                        android:id="@+id/manga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EA9292"
                        android:text="Manga"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        android:textSize="10dp"
                        app:cornerRadius="20dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:id="@+id/Chuyensinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EA9292"
                        android:text="Chuyển sinh"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        app:cornerRadius="20dp"
                        android:textSize="10dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:id="@+id/Xuyenkhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EA9292"
                        android:text="Xuyên không"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        app:cornerRadius="20dp"
                        android:textSize="10dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:id="@+id/manhwa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EA9292"
                        android:text="Manhwa"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        app:cornerRadius="20dp"
                        android:textSize="10dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:id="@+id/harem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EA9292"
                        android:text="harem"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        app:cornerRadius="20dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:id="@+id/mecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EA9292"
                        android:text="mecha"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        app:cornerRadius="20dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:id="@+id/romance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EA9292"
                        android:text="romance"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"
                        app:cornerRadius="20dp"
                        android:layout_margin="5dp"/>
                </LinearLayout>

            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/hrzv">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/thang_cap_vo_han_trong_murim"/>
                        <TextView
                            android:id="@+id/textten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img1"
                            android:text="Thăng cấp vô hạn trong Murim"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img1"
                            android:layout_below="@id/textten"
                            android:layout_marginTop="10dp"
                            android:text="Ngày đăng: 27/12/2022"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/cv1"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/dai_chien_nguoi_khong_lo"/>
                        <TextView
                            android:id="@+id/textten2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img2"
                            android:text="Attack on titan"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img2"
                            android:layout_below="@id/textten2"
                            android:layout_marginTop="10dp"
                            android:text="Ngày đăng: 26/12/2022"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/cv2"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/anh_sang_cuoi_con_duong"/>
                        <TextView
                            android:id="@+id/textten3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img3"
                            android:text="Ánh sáng cuối con đường"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img3"
                            android:layout_below="@id/textten3"
                            android:layout_marginTop="10dp"
                            android:text="Ngày đăng: 23/12/2022"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/cv4"
                    android:layout_below="@id/cv3"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/chu_thuat_hoi_chien"/>
                        <TextView
                            android:id="@+id/textten4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img4"
                            android:text="Chú thuật hồi chiến"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img4"
                            android:layout_below="@id/textten4"
                            android:layout_marginTop="10dp"
                            android:text="Ngày đăng: 23/12/2022"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/cv4"
                    android:layout_marginTop="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/tuyet_the_vo_than_2793"/>
                        <TextView
                            android:id="@+id/textten5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img5"
                            android:text="Tuyệt thế võ thần"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img5"
                            android:layout_below="@id/textten5"
                            android:layout_marginTop="10dp"
                            android:text="Ngày đăng: 28/12/2022"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>



        </RelativeLayout>



    </androidx.core.widget.NestedScrollView>

</LinearLayout>