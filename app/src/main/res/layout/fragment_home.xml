                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:layout_below="@id/imageViewhot2"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:textColor="#302C2C"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imageViewhot3"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/chu_thuat_hoi_chien" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chú thuật hồi chiến"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:layout_below="@id/imageViewhot3"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:textColor="#302C2C"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imageViewhot4"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/dai_chien_nguoi_khong_lo" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attack on titans"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:layout_below="@id/imageViewhot4"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:textColor="#302C2C"
                            />
                    </RelativeLayout>

                </ViewFlipper>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/textTruyenFull"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_conner"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="Truyện Full"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <HorizontalScrollView
                    android:id="@+id/Horizon2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTruyenFull"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"

                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

