<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bottom.HomeFragment"
    android:id="@+id/frame_home"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <ViewFlipper
                android:id="@+id/viewfliper1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTruyenHot"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:autoStart="true"
                android:flipInterval="2500"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/manga_manhua_manhwa1"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/slide_mangas_2"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/slide_manga_3"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/slide_manga_4"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/slide_manga_5"/>
            </ViewFlipper>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/textTheloai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rounded_conner"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:paddingStart="10dp"
                    android:text="Thể Loại"
                    android:textColor="@color/black"

                    android:textSize="15sp"
                    android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textTheloai"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            >
                            <Button

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#EA9292"
                                android:text="Hành động"
                                android:textColor="@color/black"
                                android:textStyle="bold|italic"
                                app:cornerRadius="20dp"
                                android:textSize="10dp"
                                android:layout_margin="5dp"
                                />
                            <Button

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#EA9292"
                                android:text="Manga"
                                android:textColor="@color/black"
                                android:textStyle="bold|italic"
                                android:textSize="10dp"
                                app:cornerRadius="20dp"
                                android:layout_margin="5dp"/>
                            <Button

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#EA9292"
                                android:text="Chuyển sinh"
                                android:textColor="@color/black"
                                android:textStyle="bold|italic"
                                app:cornerRadius="20dp"
                                android:textSize="10dp"
                                android:layout_margin="5dp"/>
                            <Button

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#EA9292"
                                android:text="Xuyên không"
                                android:textColor="@color/black"
                                android:textStyle="bold|italic"
                                app:cornerRadius="20dp"
                                android:textSize="10dp"
                                android:layout_margin="5dp"/>
                            <Button

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#EA9292"
                                android:text="Manhwa"
                                android:textColor="@color/black"
                                android:textStyle="bold|italic"
                                app:cornerRadius="20dp"
                                android:textSize="10dp"
                                android:layout_margin="5dp"/>
                            <Button

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#EA9292"
                                android:text="harem"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                android:textStyle="bold|italic"
                                app:cornerRadius="20dp"
                                android:layout_margin="5dp"/>
                            <Button

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#EA9292"
                                android:text="mecha"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                android:textStyle="bold|italic"
                                app:cornerRadius="20dp"
                                android:layout_margin="5dp"/>
                            <Button

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#EA9292"
                                android:text="romance"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                android:textStyle="bold|italic"
                                app:cornerRadius="20dp"
                                android:layout_margin="5dp"/>
                        </LinearLayout>
                    </HorizontalScrollView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textTruyenMoi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/rounded_conner"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="6dp"
                    android:paddingStart="10dp"
                    android:text="Truyện Nổi Bật"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <HorizontalScrollView
