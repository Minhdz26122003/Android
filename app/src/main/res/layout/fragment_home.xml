                                android:textSize="13dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#302C2C"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/imageViewfull2"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:src="@drawable/truong_hoc_sieu_anh_hung_3626"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageViewfull2"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:text="Boku no Hero Academia"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                android:textColor="#302C2C"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageViewfull3"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:src="@drawable/mashle_muscles_and_magic"
