                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:src="@drawable/tinh_giap_hon_tuong"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                />

                            <TextView
                                android:id="@+id/textimageViewmoi2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageViewmoi2"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:text="Tinh giáp hồn tướng"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                android:textColor="#302C2C"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlnnmtnoi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageViewmoi3"
                                android:layout_width="200dp"
                                android:layout_height="200dp"

                                android:src="@drawable/nga_lao_ma_than"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                               />
                            <TextView
                                android:id="@+id/textimageViewmoi3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nano ma thần"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                android:layout_below="@id/imageViewmoi3"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textColor="#302C2C"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rlslnoi"
                            >

                            <ImageView
                                android:id="@+id/imageViewmoi4"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:src="@drawable/toi_thang_cap_mot_minh_ss2"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"/>

                            <TextView
                                android:id="@+id/textimageViewmoi4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Solo Leveling"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                android:layout_below="@id/imageViewmoi4"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textColor="#302C2C"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            >

                            <ImageView
                                android:id="@+id/imageViewmoi5"
                                android:layout_width="200dp"
                                android:layout_height="200dp"

                                android:src="@drawable/thang_cap_vo_han_trong_murim"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thăng cấp vô hạn trong murim"
                                android:textSize="13dp"
                                android:textStyle="bold"
                                android:layout_below="@id/imageViewmoi5"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:textAlignment="center"
                                android:textColor="#302C2C"
                                />
                        </RelativeLayout>
                    </LinearLayout>

                </HorizontalScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/textTruyenHot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_conner"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="Truyện Hot"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    android:textColor="@color/black"/>

                <ViewFlipper
                    android:id="@+id/viewfliper2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTruyenHot"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:autoStart="true"
                    android:flipInterval="2500"
                    android:inAnimation="@android:anim/slide_in_left"
                    android:outAnimation="@android:anim/slide_out_right">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imageViewhot1"
